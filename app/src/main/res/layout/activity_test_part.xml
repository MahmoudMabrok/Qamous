<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".feature.text.TextPart">

    <!--appBar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tvColorMain"
        android:paddingTop="@dimen/_16sdp"
        android:paddingBottom="@dimen/_16sdp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/tvColorSplash"
            android:text="AAA"
            android:textSize="@dimen/tvSizeCategory"/>

    </LinearLayout>
    <!--rv-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/_16sdp">

        <TextView
            android:id="@+id/tvResultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/tvSizeCategory"
            android:text="AAA"
            android:layout_marginBottom="@dimen/_16sdp"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
    </LinearLayout>


    <!--bottom-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:background="@color/tvColorMain">

        <EditText
            android:id="@+id/edText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="@string/enter_text_here"
            android:background="@drawable/ed_back"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:layout_height="wrap_content"/>


            <ImageButton
                android:id="@+id/imAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_back"
                android:src="@drawable/ic_evaluate"/>

    </LinearLayout>


</LinearLayout>